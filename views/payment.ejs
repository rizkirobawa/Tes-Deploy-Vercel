<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Page</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .payment-container {
        display: flex;
        justify-content: space-between;
        margin-top: 50px;
      }
      .payment-form {
        width: 48%;
      }
      .booking-details {
        width: 48%;
      }
      .btn-pay {
        width: 100%;
        background-color: #6f42c1;
        color: white;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="payment-container">
        <div class="payment-form">
          <h2>Isi Data Pembayaran</h2>
          <input type="hidden" id="bookingId" value="<%= bookingId %>" />
          <select id="paymentMethod" name="paymentMethod">
            <option value="gopay">Gopay</option>
            <option value="mandiri_va">Mandiri Virtual Account</option>
            <option value="credit_card">Credit Card</option>
          </select>
          <button id="pay-button" class="btn btn-pay">Bayar</button>
          <div id="snap-container" style="width: 100%; height: 500px"></div>
          <!-- Container for Snap Embed -->
        </div>
        <div class="booking-details">
          <!-- Booking details remain unchanged -->
          <h2>
            Booking Code: <span id="bookingCode"><%= bookingCode %></span>
          </h2>
          <!-- Other details -->
        </div>
      </div>
    </div>

    <script
      src="https://app.sandbox.midtrans.com/snap/snap.js"
      data-client-key="<%= process.env.PAYMENT_DEV_CLIENT_KEY %>"
    ></script>
    <script>
      document
        .getElementById('pay-button')
        .addEventListener('click', async function () {
          // const paymentMethod = document.getElementById('paymentMethod').value;
          const bookingId = document.getElementById('bookingId').value;
          const paymentMethod = 'midtrans';

          const response = await fetch(
            `/api/v1/payments/midtrans/token/${bookingId}`,
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ paymentMethod }),
            }
          );

          const result = await response.json();
          if (result.status) {
            window.snap.embed(result.data.token, {
              embedId: 'snap-container',
              onSuccess: function (result) {
                alert('Payment success!');
                console.log(result);
                // window.location.href = '/'; // Redirect on success
              },
              onPending: function (result) {
                alert('Waiting for your payment...');
                console.log(result);
              },
              onError: function (result) {
                alert('Payment failed!');
                console.log(result);
              },
              onClose: function () {
                alert('You closed the popup without finishing the payment');
              },
            });
          } else {
            alert(result.message);
          }
        });
    </script>
  </body>
</html>
